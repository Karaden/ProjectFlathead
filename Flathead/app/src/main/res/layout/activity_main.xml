<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/message01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="@string/mood01" />

        <RadioButton
            android:id="@+id/message02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="@string/mood02" />

        <RadioButton
            android:id="@+id/message03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="@string/mood03" />

        <RadioButton
            android:id="@+id/message04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="@string/message04" />


        <Button
            android:id="@+id/btnDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonlabel" />

    </RadioGroup>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/VisiblePanel"
        android:layout_width="381dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:fadingEdge="horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chosenLabel"
            android:layout_width="match_parent"
            android:layout_height="253dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:text="@string/default_message"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <TextView
            android:id="@+id/subtitleLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAlignment="textEnd" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/message04"
            android:padding="5dp"
            app:srcCompat="@android:drawable/btn_star" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="205dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="94dp"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="144dp"
            android:padding="2dp"
            android:text="@string/default_message"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />
    </LinearLayout>


</LinearLayout>
