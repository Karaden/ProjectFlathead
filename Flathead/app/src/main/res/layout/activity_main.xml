<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    android:keepScreenOn="true"
    tools:context="com.karaden.flathead.MainActivity">


    <!--The video preview panel-->
    <fragment
    android:id="@+id/vid_fragment"
    android:name="com.karaden.flathead.cameraUVC.UVCCameraFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout="@layout/fragment_uvccamera" />


    <!--Message picker-->
    <fragment
        android:id="@+id/messageListFragment"
        android:name="com.karaden.flathead.message.picker.MessagePickerFragment"
        android:layout_width="467dp"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_messagepicker" />


</FrameLayout>


