<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    android:baselineAligned="false"
    android:keepScreenOn="true"
    android:orientation="horizontal"
    tools:context="com.example.kate.flathead.MainActivity">

    <!--The message picker-->
    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.25">

        <!--<fragment-->
        <!--android:id="@+id/messageListFragment"-->
        <!--android:name="com.example.kate.flathead.message.picker.MessagePickerFragment"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--tools:layout="@layout/fragment_messagepicker" />-->

        <fragment
            android:id="@+id/messageListFragment"
            android:name="com.example.kate.flathead.dummy.RedFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_red" />

    </RelativeLayout>

    <!--The message display-->
    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.5">

        <fragment
            android:id="@+id/displayFragment"
            android:name="com.example.kate.flathead.message.display.MessageDisplayFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_messagedisplay" />

        <!--<fragment-->
        <!--android:id="@+id/fragment2"-->
        <!--android:name="com.example.kate.flathead.dummy.RedFragment"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--tools:layout="@layout/fragment_red" />-->

    </RelativeLayout>


    <!--The video preview panel-->
    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.25">

        <fragment
            android:id="@+id/vid_fragment"
            android:name="com.example.kate.flathead.camera.Camera2BasicFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_camera2_basic" />

    </RelativeLayout>


    <!--&lt;!&ndash; The primary full-screen view. This can be replaced with whatever view-->
    <!--is needed to present your content, e.g. VideoView, SurfaceView,-->
    <!--TextureView, etc. &ndash;&gt;-->

</LinearLayout>


